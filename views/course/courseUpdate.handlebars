<form action="/courses/update" method="post">
    <input type="hidden" name="id" value={{course.id}}>
    Title: <input type="text" name="title" value="{{course.title}}">
    <br> <br> 
    Description: <input type="text" name="description" value="{{course.description}}">
    <br> <br>
    Category: <input type="text" name="category" value="{{course.category}}">
    <br> <br>

    Usuario criador:
     <select name="owner_id">
        {{#each users}}
        <tr>
            <option value={{id}}>{{id}} - {{name}} - {{role}}</option>
        </tr>
        {{/each}}
    </select>
    <br> <br>

    Status: <input type="text" name="status" value="{{course.status}}">
    <br> <br>

    <input type="submit" value="Editar">
        
</form>